extends layout

block content
    div.w3-container.w3-gray
        h1= title

    table.w3-table-all.w3-margin(style="width:95%")
        thead
            tr.w3-light-gray
                th ID
                th Name
                th Email
        each teacher in teacher_list
            tr
                td #{teacher.id_number}
                td
                    a(href=teacher.url) #{teacher.name}
                td #{teacher.email_address}

        else
            tr
                td Teacher list is empty